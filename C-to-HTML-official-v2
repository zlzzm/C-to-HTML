#include <stdio.h>
#define LINEBREAK "<br>"
#define COPYRIGHT "&copy"
#define LINE "<hr>"
int line ();
int header(int hLevel, char text[]);
int iframe(char iframeSrc[], int iframeWidth, int iframeHeight);
int subHeader(char subText[]);
int starter(char style1[], char title[]);
int ender();
int button(char buttonText[]);
int img(char imageSrc[], char altTxt[], int imgWidth, int imgHeight);
int link(char link[], char linkTxt[]);
int linkNewTab(char linkNewTab[], char linkTxtNewTab[]);
int p(char pTxt[]);
int colorStyle(char color[]);
int bgColorStyle(char bgColor[]);
int themeStyle(char style[]);
int templates(char templates[]);
int header(int hLevel, char text[]) {
    printf("\t<h%d>%s</h%d>\n", hLevel, text, hLevel);
}
int bgColorStyle(char bgColor[]) {
    printf("\tbody {\n\t\tbackground: %s;\n", bgColor);
}
int colorStyle(char color[]) {
    printf("\t\tcolor: %s;\n\t}\n", color);
}
int themeStyle(char style[]) {
    if (style == "dark") 
    {
        bgColorStyle("black");
        colorStyle("white");
    }
    else if (style == "light")
    {
        bgColorStyle("white");
        colorStyle("black");
    }
    else if (style == "matrix") 
    {
        bgColorStyle("black");
        colorStyle("lime");
    }
    else if (style == "rose")
    {
        bgColorStyle("white");
        colorStyle("pink");
    }
    else if (style == "hacker")
    {
        bgColorStyle("black");
        colorStyle("green");
    }
    else if (style == "aqua")
    {
        bgColorStyle("aqua");
        colorStyle("navy");
    }
    else if (style == "sunset")
    {
        bgColorStyle("orange");
        colorStyle("maroon");
    }
    else if (style == "ghost")
    {
        bgColorStyle("white");
        colorStyle("grey");
    }
    else if (style == "royal")
    {
        bgColorStyle("purple");
        colorStyle("gold");
    }
    else if (style == "dev")
    {
        bgColorStyle("#111");
        colorStyle("cyan");
    }
    else 
    {
        bgColorStyle("white");
        colorStyle("black");
    }
}
int starter(char style1[], char title[]) {
    printf("<!DOCTYPE html>\n");
    printf("<html lang = en>\n");
    printf("\n");
    printf("<head>\n");
    printf("\t<meta charset=\"UTF-8\" />\n");
    printf("\t<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\" />\n");
    printf("\t<title>%s</title>\n", title);
    printf("\t<style>\n");
    themeStyle(style1);
    printf("\t</style>\n");
    printf("</head>\n");
    printf("\n");
    printf("<body>\n");
    return 0;
}
int iframe(char iframeSrc[], int iframeWidth, int iframeHeight) {
    printf("\t<iframe src=\"%s\" width=\"%d\" height=\"%d\"></iframe>\n", iframeSrc, iframeWidth, iframeHeight);
    return 0;
}
int ender() {
    printf("</body>");
    printf("\n\n");
    printf("</html>");
    return 0;
}
int button(char buttonText[]) {
    printf("\t<button>%s</button>\n", buttonText);
    return 0;
}
int img(char imgSrc[], char altTxt[], int imgWidth, int imgHeight) {
    printf("\t<img src=\"%s\" alt=\"%s\" width=\"%d\" height=\"%d\" />\n", imgSrc, altTxt, imgWidth, imgHeight);
    return 0;
}
int link(char link[], char linkTxt[]) {
    printf("\t<a href=\"%s\">%s</a>\n", link, linkTxt);
    return 0;
}
int linkNewTab(char linkNewTab[], char linkTxtNewTab[]) {
    printf("\t<a href=\"%s\" target=\"_blank\">\"%s\"</a>\n", linkNewTab, linkTxtNewTab);
}
int p(char pTxt[]) {
    printf("\t<p>%s</p>\n", pTxt);
}
int templates(char templates[]) {
    if (templates == "rickroll") {
        starter("dark", "rickroll");
        header(1, "you just got rickrolled!");
        iframe("https://www.youtube.com/watch?v=dQw4w9WgXcQ", 600, 400);
        header(2, "lol");
        p("BTW, this was written by an engine made in C!");
        ender();
    }
    if (templates == "starter") {
        starter("light", "welcome!");
        header(1, "Welcome to the C to HTML library!");
        header(2, "I am so happy you are able to use this!");
        p("with this, you can save quite a bit of time.");
        p("such as instead of having to type <p>text</p>, you can just type p(\"text\") and then you get the same code.");
        p("have fun with this!");
        ender();
    }
    if (templates == "404notFound") {
        starter("dark", "404 not found");
        header(1, "\t\t\t404 NOT FOUND");
        header(2, "\t\t\tERROR_CLIENT_SERVER");
        ender();
    }
    if (templates == "hello world") {
        starter("light", "My god the classic?");
        header(1, "Hello World");
        p("");
        p("");
        p("");
        header(6, "Why the classic? Like just why?");
        ender();
    }
    if (templates == "buttons") {
        starter("dark", "booton!!!");
        header(1, "click any of em");
        button("1");
        button("2");
        button("3");
        button("4");
        button("5");
        ender();
    }
    if (templates == "atv") {
        starter("dark", "LETS FRICKIN GOOO!!!!!!!");
        header(1, "BEST DAY EVER!");
        link("https://deerhurstresort.com/plan-your-stay/activities/atv/", "link to place!");
        img("https://deerhurstresort.com/uploads/2016/11/Outdoor-Adventures-Yamaha-Riding-Adventures-ATV-2.jpg", "This is a picture thats gonna be me!", 800, 700);
        header(2, "gonna have fun!");
        ender();
    }
}
int line() {
    printf(LINE"\n");
}
